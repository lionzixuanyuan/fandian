<h1>Listing orders</h1>

<table>
  <tr>
    <th>Order num</th>
    <th>Original price</th>
    <th>Current price</th>
    <th>Phone</th>
    <th>Address</th>
    <th>State</th>
    <th>User</th>
    <th>Area</th>
    <th>Shop</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%=h order.order_num %></td>
    <td><%=h order.original_price %></td>
    <td><%=h order.current_price %></td>
    <td><%=h order.phone %></td>
    <td><%=h order.address %></td>
    <td><%=h order.state %></td>
    <td><%=h order.user_id %></td>
    <td><%=h order.area_id %></td>
    <td><%=h order.shop_id %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

