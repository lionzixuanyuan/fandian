<h1>Listing foods</h1>

<table>
  <tr>
    <th>Food type</th>
    <th>Name</th>
    <th>Enable</th>
    <th>Sort</th>
    <th>Description</th>
    <th>Price</th>
    <th>Food state</th>
    <th>Food unit</th>
    <th>Activity state</th>
    <th>Is new</th>
    <th>Is sign</th>
    <th>Is hot</th>
  </tr>

<% @foods.each do |food| %>
  <tr>
    <td><%=h food.food_type_id %></td>
    <td><%=h food.name %></td>
    <td><%=h food.enable %></td>
    <td><%=h food.sort_id %></td>
    <td><%=h food.description %></td>
    <td><%=h food.price %></td>
    <td><%=h food.food_state %></td>
    <td><%=h food.food_unit %></td>
    <td><%=h food.activity_state %></td>
    <td><%=h food.is_new %></td>
    <td><%=h food.is_sign %></td>
    <td><%=h food.is_hot %></td>
    <td><%= link_to 'Show', food %></td>
    <td><%= link_to 'Edit', edit_food_path(food) %></td>
    <td><%= link_to 'Destroy', food, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New food', new_food_path %>